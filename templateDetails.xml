<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>coca</name>
	<creationDate>December 2012</creationDate>
	<author>Children of Central Asia Foundation</author>
	<authorEmail>webmaster@childrenofcentralasia.org</authorEmail>
	<authorUrl>http://childrenofcentalasia.org</authorUrl>
	<copyright>Copyright (C) 2014 Children of Central Asia Foundation, Inc. All rights reserved.</copyright>
	<license>None</license>
	<version>2.2</version>
	<description>Children of Central Asia Foundation</description>

	<files>
		<folder>css</folder>
		<folder>images</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>javascript</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
	</files>

	<positions>
		<position>debug</position>
		<position>navbar</position>
		<position>banner-right</position>
		<position>slider</position>
		<position>contextual-menu</position>
		<position>breadcrumb</position>	
		<position>left</position>			
		<position>middle</position>
		<position>right</position>
		<position>bottom</position>						
		<position>footer</position>
		<position>copyright</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_coca.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_coca.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">
			</fieldset>
		</fields>
	</config>
</extension>
